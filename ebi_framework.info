; Theme settings:

; Top Bar
settings[ebi_framework_top_bar_enable] = 0
settings[ebi_framework_version] = '1.3'
settings[ebi_framework_style] = 1
settings[ebi_framework_top_bar_grid] = 0
settings[ebi_framework_top_bar_sticky] = 0
settings[ebi_framework_top_bar_menu_text] = 'Menu'
settings[ebi_framework_top_bar_custom_back_text] = 1
settings[ebi_framework_top_bar_back_text] = 'Back'
settings[ebi_framework_top_bar_is_hover] = 1
settings[ebi_framework_top_bar_scrolltop] = 1
settings[ebi_framework_top_bar_mobile_show_parent_link] = 1

; Tooltips
settings[ebi_framework_tooltip_enable] = 0
settings[ebi_framework_tooltip_position] = 'top'
settings[ebi_framework_tooltip_mode] = 'text'
settings[ebi_framework_tooltip_text] = 'More information?'
settings[ebi_framework_tooltip_touch] = 0

; Styles and Scripts
settings[ebi_framework_disable_core_css] = 0
settings[ebi_framework_css_rules_file_0] = ''

; Breadcrumbs
settings[ebi_framework_use_second_breadcrumb_in_header] = 0
settings[ebi_framework_show_pagetitle_as_crumb] = 0
settings[ebi_framework_strip_first_breadcrumb] = '1'

; Misc
settings[ebi_framework_html_tags] = 1
settings[ebi_framework_messages_modal] = 1
settings[ebi_framework_messages_modal_static] = 0
settings[ebi_framework_pager_center] = 1

